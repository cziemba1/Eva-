<%- include("../partials/header") %>
<div class="row p-3">

    <div class="container">
        <div class="thumbnail">
            <h1>Perfil de usuario: <span class="text-danger"><%= user.username%></span> </h1>
            <img style="width:20%" class="image-responsive" src="<%= user.avatar%>" alt="Foto de perfil">
            <div class="caption-full caption">
                <p><span class="text-danger">Nombre: </span><%= user.firstName%> </p>
                <p><span class="text-danger">Apellido: </span><%= user.lastName%></p>
                <a class="py-md-5" href="mailto:<%= user.email %>"><span class="text-danger">Email:
                    </span><%= user.email %></a>
                <p class="py-md-3"><span class="text-danger">Bio:
                    </span>
                    <%= user.info %>
                </p>
                <h3>Eventos creados por <%= user.username%>:</h3>
            </div>
            <div class="row text-center" id="evento-grid" style="display:flex; flex-wrap: wrap;">
                <% eventos.forEach((evento) =>{ %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card">
                        <img class="card-img-top" src="<%= evento.image %>" alt="<%= evento.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%- evento.name -%></h5>

                            <div>
                                <span class=" btn btn-sm btn-danger"><i class="fas fa-heart"></i>
                                    <%= evento.likes.length %></span>
                            </div>
                            <a href=" /eventos/<%= evento._id %>" class="btn btn-danger" style="margin: 1rem">Mas
                                info</a>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>