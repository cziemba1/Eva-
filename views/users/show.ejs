<%- include("../partials/header") %>
<div class="row p-3">

    <div class="container">
        <div class="thumbnail">

            <img style="width:20%" class="image-responsive" src="<%= user.avatar%>" alt="Foto de perfil">
            <h1 class="text-danger"><%= user.username%></h1>
            <div class="caption-full caption">
                <p><span class="text-danger">Nombre: </span><%= user.firstName%> </p>
                <p><span class="text-danger">Apellido: </span><%= user.lastName%></p>
                <a class="py-md-5" href="mailto:<%= user.email %>"><span class="text-danger">Email:
                    </span><%= user.email %></a>
                <p class="py-md-3"><span class="text-danger">Bio:
                    </span>
                    <%= user.info %>
                </p>
                <h3>Eventos creados por <%= user.username%>:</h3>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <% eventos.forEach((evento) =>{%>
                <div class="card">
                    <img class="card-img-top" src="<%= evento.image %>" alt="<%= evento.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%- evento.name -%></h5>
                        <a href="/eventos/<%= evento._id %>" class="btn btn-danger">Mas info</a>
                    </div>
                </div>
            </div>
            <%})%>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>