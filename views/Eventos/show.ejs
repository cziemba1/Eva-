<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">EvA</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item ">Info 2</li>
                <li class="list-group-item ">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail ">
                <img class="image-responsive" src="<%= evento.image %>" alt="<%= evento.name %>">
                <div class="caption-full caption">
                    <div class="pull-right">$9.00</div>
                    <h4><a href=""><%- evento.name %></a></h4>
                    <p><%- evento.description %></p>
                    <p><em>Creado por </em>
                        <%- evento.author.username %></em>
                    </p>
                    <% if(currentUser && evento.author.id.equals(currentUser._id)){ %>

                    <a class="btn btn-danger btn-xs" href="/eventos/<%= evento._id %>/edit">Editar evento</a>
                    <form class="delete-form" action="/eventos/<%= evento._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger btn-xs">Eliminar evento</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-danger" href="/eventos/<%- evento._id %>/comments/new">Agrega un nuevo
                        comentario</a>
                </div>
                <hr>
                <% evento.comments.forEach(function (comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="pull-right">10 dias atras</span>
                        <p> <%= comment.text %></p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                        <a class="text-danger button-custom"
                            href="/eventos/<%=evento._id%>/comments/<%=comment._id%>/edit">Editar</a>
                        <form class="delete-form"
                            action="/eventos/<%=evento._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                            <button class="text-danger button-custom">Borrar</button>
                        </form>
                        <% } %>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>








<%- include("../partials/footer") %>