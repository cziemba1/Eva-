<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">EvA</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item ">Info 2</li>
                <li class="list-group-item ">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail ">
                <img class="image-responsive" src="<%= evento.image %>" alt="<%= evento.name %>">
                <div class="caption-full caption">
                    <div class="pull-right">$9.00</div>
                    <h4><a href=""><%- evento.name %></a></h4>
                    <p><%- evento.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-danger" href="/eventos/<%- evento._id %>/comments/new">Agrega un nuevo
                        comentario</a>
                </div>
                <hr>
                <% evento.comments.forEach(function (comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author %></strong>
                        <span class="pull-right">10 dias atras</span>
                        <p> <%= comment.text %></p>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>








<%- include("../partials/footer") %>