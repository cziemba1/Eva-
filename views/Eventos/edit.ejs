<%- include("../partials/header") %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Editar evento: <%= evento.name %></h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/eventos/<%= evento._id %>/?_method=PUT" method="POST">
            <div class="form-group">
                <label class="text-danger" for="name">Nombre</label>
                <input class="form-control" type="text" name="evento[name]" id="name" value="<%= evento.name%>">
            </div>
            <div class="form-group">
                <label class="text-danger" for="image">Imagen</label>
                <input class="form-control" type="text" name="evento[image]" id="image" value="<%= evento.image %>"
                    required>
            </div>
            <div class=" form-group">
                <label class="text-danger" for="description">Descripci√≥n</label>
                <input class="form-control" type="text" name="evento[description]" id="description"
                    value="<%= evento.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-danger btn-block">Actualizar!</button>
            </div>
        </form>
        <a href="/eventos">Volver</a>
    </div>
</div>
<%- include("../partials/footer") %>