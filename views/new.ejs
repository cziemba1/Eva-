<%- include("partials/header") %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Crea un nuevo evento</h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/eventos" method="POST">
            <div class="form-group">
                <label class="text-danger" for="name">Nombre</label>
                <input class="form-control" type="text" name="name" id="name" placeholder="Conferencia 2020..">
            </div>
            <div class="form-group">
                <label class="text-danger" for="image">Imagen</label>
                <input class="form-control" type="text" name="image" id="image"
                    pattern="^https:\/\/images\.unsplash\.com\/.*"
                    title="Only images from images.unsplash.com allowed. See link below for instructions."
                    placeholder="https://images.unsplash.com/..." required>
                <small>Click <a href="https://youtu.be/Bn3weNRQRDE">aqui</a> un tutorial sobre como copiar urls de
                    Unsplash</small>
            </div>
            <div class="form-group">
                <label class="text-danger" for="cost">Costo</label>
                <input class="form-control" type="number" name="cost" id="cost" placeholder="100" step="0.01" min="0"
                    required>
            </div>
            <div class="form-group">
                <label class="text-danger" for="location">Locacion</label>
                <input class="form-control" type="text" name="location" id="location"
                    placeholder="Alicia M de Justo 1680 Puerto Madero, CABA C1107">
            </div>
            <div class=" form-group">
                <label class="text-danger" for="description">Descripción</label>
                <input class="form-control" type="text" name="description" id="description"
                    placeholder="La conferencia son dos días pensados..">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-danger btn-block">Crear!</button>
            </div>
        </form>
        <a href="/eventos">Volver</a>
    </div>
</div>
<%- include("partials/footer") %>