<%- include("../partials/header") %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Editar Comentario</h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/eventos/<%= evento_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text%>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-danger btn-block">Actualizar!</button>
            </div>
        </form>
        <a href="/eventos">Volver</a>
    </div>
</div>
<%- include("../partials/footer") %>